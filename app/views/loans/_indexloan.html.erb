<table>
  <thead>
    <tr>
      <th>Loan ID</th>
      <th>Client name</th>
      <th>Loan amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= link_to loan.id, loan %></td>
        <td><%= loan.client_name %></td>
        <td><%= loan.loan_amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Loan', new_loan_path %>
